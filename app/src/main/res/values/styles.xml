<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorPrimaryDark">@color/light_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/EditText</item>
    </style>

    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/light_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">#fff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
