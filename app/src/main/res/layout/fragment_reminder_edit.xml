<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.remember.fragment.ReminderDetailsFragment">

        <EditText
            android:id="@+id/edit_reminder_title"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_reminder_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/edit_reminder_title"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_reminder_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_reminder_date"
            android:textSize="20sp" />
</RelativeLayout>
